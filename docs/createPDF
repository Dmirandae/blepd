# Collect arguments
args <- commandArgs(TRUE)
 

library(devtools)
library(rmarkdown)

if(length(args) != 0) {
  archivos <- args
}else{archivos <- dir(pattern=".Rmd")}



print(archivos)

for(nombre in archivos){

render(input=nombre, "all", 
       clean=TRUE ,
       output_format="html_document"
       )

}


q()
